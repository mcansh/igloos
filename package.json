{
  "name": "igloos",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --fix --no-error-on-unmatched-pattern --cache .",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown",
    "dev:css": "postcss styles --base styles --dir public/ -w",
    "build:ts": "tsc",
    "build:css": "postcss styles --base styles --dir public/ --env production",
    "build": "npm run build:ts && npm run build:css",
    "clean": "del public/index.css"
  },
  "dependencies": {
    "@sentry/node": "7.77.0",
    "date-fns": "2.30.0",
    "twilio": "4.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/node-fetch": "2.6.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vercel/node": "3.0.7",
    "autoprefixer": "^10.4.16",
    "del-cli": "5.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "10.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  }
}
